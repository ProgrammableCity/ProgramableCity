.news-type-list {
  display: flex;
  height: 80rpx;
  background-color:#808080;
  justify-content: center;
}

.news-type-item {
  display: flex;
  flex-shrink: 0;
  font-size: 32rpx;
  color: whitesmoke;
  width: 100rpx;
  padding-top: 20rpx;
}

.news-type-item#current {
  text-underline-position: auto;
  text-decoration: underline;
}

.test-image {
  width: 700rpx;
  height: 375rpx;
  z-index: -1;
}

.headline-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.image-wrapper {
  align-items: center;
  position: relative;
}

.headline-info {
  display: flex;
  align-items: center;
  bottom:0;
  left: 10rpx;
  right: 10rpx;
  height: 90rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)
}

.list-news-block {
  display: flex;
  align-items: center;
  height: 150rpx;
  margin: 0 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.list-news-image {
  width: 120rpx;
  height: 120rpx;
}

.list-news-content {
  display: flex;
  flex-direction: column;
}

.list-news-specifics-wrapper {
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  color: grey;
}